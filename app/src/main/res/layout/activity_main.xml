<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"

            android:text="Next"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">

                <TableRow
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnA_quiz"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="A"
                        android:layout_marginRight="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/txtA_quiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="Question 1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnB_quiz"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="B"
                        android:layout_marginRight="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/txtB_quiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="Question 2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnC_quiz"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="C"
                        android:layout_marginRight="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/txtC_quiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:text="Question 3"
                        android:layout_marginStart="5dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnD_quiz"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:text="D"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/txtD_quiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:text="Question 4"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:text="User" />

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-20dp"
                android:text="LogOut" />


            <TextView
                android:id="@+id/txtArabicWord1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:text="Arabic Text"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="35dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>